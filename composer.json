{
  "name": "geminilabs/dioscuri",
  "type": "project",
  "license": "GPLv3",
  "description": "WordPress boilerplate with castor and pollux",
  "homepage": "https://geminilabs.io/dioscuri/",
  "authors": [
    {
      "name": "Paul Ryley",
      "email": "paul@geminilabs.io"
    }
  ],
  "keywords": [
    "dioscuri", "geminilabs", "wordpress", "stack", "composer", "deployer", "wp"
  ],
  "support": {
    "issues": "https://github.com/geminilabs/dioscuri/issues"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "vcs",
      "url": "https://bitbucket.org/geminilabs/blackbox.git"
    },
    {
      "type": "vcs",
      "url": "https://bitbucket.org/geminilabs/wp-thumb.git"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.3.0",
    "deployer/deployer": "^4.3.0",
    "geminilabs/blackbox": "dev-master",
    "geminilabs/wp-thumb": "dev-master",
    "johnpbloch/wordpress": "^4.7.2",
    "roots/soil": "^3.7.1",
    "roots/wp-password-bcrypt": "^1.0.0",
    "roots/wp-stage-switcher": "^2.0.0",
    "wp-cli/wp-cli": "^1.1.0",
    "wpackagist-plugin/baw-login-logout-menu": "^1.3.3",
    "wpackagist-plugin/disable-comments": "^2.6",
    "wpackagist-plugin/imsanity": "^2.3.9",
    "wpackagist-plugin/meta-box": "^4.11.1",
    "wpackagist-plugin/nav-menu-roles": "^1.8.6",
    "wpackagist-plugin/paste-as-plain-text": "^1.0.1",
    "wpackagist-plugin/pollux": "^1.0.3",
    "wpackagist-plugin/post-type-archive-links": "^1.3.1",
    "wpackagist-plugin/safe-redirect-manager": "^1.7.8",
    "wpackagist-plugin/sendgrid-email-delivery-simplified": "^1.11.2",
    "wpackagist-plugin/simple-custom-post-order": "^2.3.1",
    "wpackagist-plugin/simple-page-sidebars": "^1.2.0",
    "wpackagist-plugin/stops-core-theme-and-plugin-updates": "^6.3.0",
    "wpackagist-plugin/updraftplus": "^1.13.1"
  },
  "extra": {
    "installer-paths": {
      "public/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin",
        "geminilabs/wp-thumb",
        "roots/soil",
        "roots/wp-stage-switcher"
      ],
      "public/app/plugins/{$name}/": [
        "type:wordpress-plugin",
        "geminilabs/blackbox",
        "wpackagist-plugin/baw-login-logout-menu",
        "wpackagist-plugin/disable-comments",
        "wpackagist-plugin/imsanity",
        "wpackagist-plugin/meta-box",
        "wpackagist-plugin/nav-menu-roles",
        "wpackagist-plugin/paste-as-plain-text",
        "wpackagist-plugin/pollux",
        "wpackagist-plugin/post-type-archive-links",
        "wpackagist-plugin/safe-redirect-manager",
        "wpackagist-plugin/sendgrid-email-delivery-simplified",
        "wpackagist-plugin/simple-custom-post-order",
        "wpackagist-plugin/simple-page-sidebars",
        "wpackagist-plugin/so-widgets-bundle",
        "wpackagist-plugin/stops-core-theme-and-plugin-updates",
        "wpackagist-plugin/updraftplus"
      ]
    },
    "wordpress-install-dir": "public/wp"
  },
  "scripts": {
    "post-install-cmd": [
      "sh $(pwd)/scripts/install-wordpress.sh",
      "sh $(pwd)/scripts/install-castor.sh"
    ],
    "post-update-cmd": []
  }
}
